{
  "name": "alioop-desktop",
  "version": "0.1.0",
  "description": "Alioop Desktop - Watch folder for automatic file delivery",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["audio", "delivery", "automation", "DAW"],
  "author": "Trent Becknell",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.alioop.desktop",
    "productName": "Alioop",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Audio;Utility"
    }
  }
}
